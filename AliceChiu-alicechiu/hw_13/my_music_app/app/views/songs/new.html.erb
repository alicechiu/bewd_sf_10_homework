<div class="container col-xs-12">
<div class="panel panel-default">
  <div class="panel-heading">
    <h1> Add a new song </h1>
  </div>
  <div class="panel-body">
    <%= simple_form_for @song do |f| %>
      <%= f.input :title, label: false, input_html: { placeholder: "Title" } %>
      <%= f.input :length, label: false, as: :text, input_html: { placeholder: "Length" }%>
      <%= f.input :genre, label: false, input_html: { placeholder: 'Genre' } %>
      <%= f.submit "Submit".html_safe, class: "btn btn-lg btn-danger" %>
    <%end %>
  </div>
</div>
</div>
